<% include ./partials/header %>
<head>
  <meta charset="utf-8">
   <meta name="viewport" content="width=device-width">
    <title>MacroTracker</title>
    <link rel="stylesheet" type="text/css" href="/css/userStats.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <!-- Material design icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
</head>
<body>
  <h3>Stats</h3>
  <div class="outer-container">
    <div class="calories-grid">
      <div class="cal-header">This Week's Consumption</div>
      <div class="cal-subtitle-consumed">Consumed</div>
      <div class="cal-subtitle-allowed">Allowed</div>
      <div class="cal-consumed">###</div>
      <div class="cal-allowed">###</div>
      <div class="cal-icon">+/-</div>
      <div class="cal-difference">###</div>
    </div>
    <div class="macros-grid">
      <div class="macro-header">Macros</div>
      <div class="carb-title">C</div>
      <div class="fat-title">F</div>
      <div class="protein-title">P</div>
      <div class="targets-subtitle">Targets</div>
        <div class="carb-target"><%=macros.carbs %></div>
        <div class="fat-target"><%=macros.fats %></div>
        <div class="protein-target"><%=macros.protein %></div>
      <div class="consumed-macros-subtitle">Consumption vs Target +/-</div>
        <div class="carb-balance">carb #</div>
        <div class="fat-balance">fat #</div>
        <div class="protein-balance">protein #</div>
      <div class="macro-message">You are eating too/not enough xxxxx</div>
    </div>
  </div>

  <div>Total Calories Consumed = <span class="consumed"></span</div>
  <div>Total Calories Allowed = <span class="cal-limit"></span></div>
  <div><%= macros %></div>

  <!-- Data placeholders -->
  <div style="display: none;">
    <div class="weekly-entries"><%=weeklyEntries %></div>
    <div class="favorites"><%=favorites %></div>
  <div>

<script type="text/javascript" src="/scripts/userStats.js"></script>
</body>
<% include ./partials/footer %>
