<% include ./partials/header %>
<head>
  <meta charset="utf-8">
   <meta name="viewport" content="width=device-width">
    <title>MyFoodPal</title>
    <link rel="stylesheet" type="text/css" href="/css/newUser.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <!-- Material design icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
</head>
<body>
  <h3>Hello <%= username %></h3>
  <h4>Update Your Details</h4>
  <form action="/<%= username %>/updateProfile?_method=PUT" method="POST" class="profile-form">
    <label class="email-label" for="email">Email</label>
      <input name="email" id="email" placeholder="email" value="<%= email %>">
    <div class="current-stats-label">Current Body Stats</div>
      <label for="weight">Weight</label>
        <input name="weight" id="weight" value="<%= profile.weight %>" type="number" min="0" autocomplete="off">
      <label for="bodyFat">Body Fat Percentage</label>
        <input name="bodyFat" id="bodyFat" value="<%= profile.bodyFat * 100 %>" type="number" min="1" max="50" step="0.10" autocomplete="off">
    <div class="goals-label">Enter Your Goals</div>
      <label for="goalWeight">Goal Weight</label>
        <input name="goalWeight" id="goalWeight" value="<%= goal.weight %>" type="number" min="0" autocomplete="off">
      <label for="goalBodyFat">Goal Body Fat Percentage</label>
        <input name="goalBodyFat" id="goalBodyFat" value="<%= goal.bodyFat * 100 %>" type="number" min="1" max="50" step="0.10" autocomplete="off">
    <div class="macro-labels">Macro Targets (in grams)</div>
      <label for="carbs">Carb</label>
        <input name="carbs" id="carbs" value="<%= macros.carbs %>" type="number" min="0" autocomplete="off">
      <label for="fats">Fat</label>
      <input name="fats" id="fats" value="<%= macros.fats %>" type="number" min="0" autocomplete="off">
      <label for="protein">Protein</label>
      <input name="protein" id="protein" value="<%= macros.protein %>" type="number" min="0" autocomplete="off">
    <div class="form-options-container">
      <button type="button" class="cancel">Cancel</button>
      <button>Submit</button>
    <div>
  </form>

</body>
  <script type="text/javascript" src="/scripts/updateProfile.js"></script>
<% include ./partials/footer %>
